# Jake Pauls
# https://jakepauls.dev
# https://github.com/jake-pauls

# Enable copying to clipboard
set selection-clipboard clipboard

# Remap color inverting
map i recolor

# Remap zooming in/out
map <C-i> zoom in
map <C-o> zoom out

# Font
set font "Jet Brains Mono Nerd Font 9"

# Theme
set default-bg                  "#1e2127"
set default-fg                  "#abb2bf"

set statusbar-bg                "#1e2127"
set statusbar-fg                "#abb2bf"

set inputbar-bg                 "#1e2127"
set inputbar-fg                 "#abb2bf"

set highlight-color             "#98c379"
set highlight-active-color      "#c678dd"

set completion-bg               "#1e2127"
set completion-fg               "#abb2bf"

set completion-highlight-fg     "#1e2127"
set completion-highlight-bg     "#c678dd"

# Changes 'tabbar' colors
set index-bg                   "#1e2127"
set index-fg                   "#abb2bf"

set index-active-bg             "#0b0c0e"
set index-active-fg             "#98c379"

# Colors used when inverting
set recolor-lightcolor          "#0b0c0e"
set recolor-darkcolor           "#F7F2F2"

set recolor                     "false"
set recolor-keephue             "false"
